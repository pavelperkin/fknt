<div class="well users-list">
	<table>
	  <tr>
	    <th>#</th>
	    <th>ФИО</th>
	    <th>Группа</th>
	  </tr>
	  <% @users.sort_by(&:group_id).each_with_index do |user, index| %>
	    <tr>
		  <td><%= index+1 %></td>
		  <td><%= user.surname%> <%= user.name%> <%= user.patronymic%></td>
		  <td><%= Group.find(user.group_id).name if !user.teacher %></td>
	    </tr>
	  <% end %>
	</table>
</div>