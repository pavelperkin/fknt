<div class="well">
	<p id="notice"><%= notice %></p>

	<h4 class="text-info"><%= @topic.name %></h4>
	<span class="label label-info"><%= @topic.tag %></span>
	<br/><br/>


	<p><%= @topic.body %></p>
	<p>User: <%= @topic.user_id %><p>
	<hr/>

	<div class="btn-group pull-right">
		<%= link_to 'Edit', edit_topic_path(@topic), :class => "btn" %>
		<%= link_to 'Back', topics_path, :class => 'btn' %>
	</div>

	<div class="clearfix"></div>

</div>
