<div class="row-fluid" style='margin: -20px 0; '>
  <div class="span6">
    <% if current_user %>
      <div style='font-size: 11px'>
      <%= render 'schedules/group_schedule', :schedule => Group.find(current_user.group_id).schedules.first %>
      </div>
    <% else %>
      <%= render 'hello_user' %>
    <% end %>
  </div>
  <div class="span6">
    <iframe width="560" height="315" src="http://www.youtube.com/embed/HALgks-9iy8" frameborder="0" allowfullscreen></iframe>
  </div>
</div>
<div class="row-fluid" style='margin-top: -60px;'>
 
</div>
<div class="row-fluid">
  <% @articles.each do |article| %>
  	<div class="articles-list-item span4 well">
        <div class="article-preview">
          <%= image_tag article.img_url, :class => 'thumbnail span6' %>
          <h4><%= link_to article.header, article %></h4>
          <%= truncate(article.preview, :length => 240, :separator => ' ', :omission =>' ...') %>
        </div>
        <span class='pull-right label <%= "label-#{Tag.find(article.tag_id).name}" %>'>
          <%= link_to t("activerecord.attributes.tag.#{Tag.find(article.tag_id).name}"), send("#{Tag.find(article.tag_id).name}_path") %>
        </span>
  	</div>
  <% end %>
</div>
<% if current_user && current_user.admin %>
  <hr/>
  <%= link_to 'Новая статья', new_article_path, :class => 'btn' %>
<% end %>

