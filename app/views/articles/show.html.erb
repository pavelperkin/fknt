<div class="well article">
	<h2><%= @article.header %></h2>
	<span class='label <%= "label-#{Tag.find(@article.tag_id).name}" %>'>
		<%= link_to t("activerecord.attributes.tag.#{Tag.find(@article.tag_id).name}"), send("#{Tag.find(@article.tag_id).name}_path") %>
	</span>
	<p id="notice">
		<%= notice %>
	</p>
	<p><%= @article.preview %></p>
	<p style="overflow:hidden;">
		<%= image_tag @article.img_url, :class => 'thumbnail span4' %>
		<%= @article.main_text %>
	</p>

	<hr/>
	<br/>

	<div class="btn-group">
	  <%= link_to '← Предыдущая статья', (Article.find(@article.id-1) if @article.id > Article.first.id), :class => 'btn' %>
	  <%= link_to 'Следующая статья →', (Article.find(@article.id+1) if @article.id < Article.last.id), :class => 'btn' %>
	  <%if current_user.admin || current_user.teacher %>
	    <%= link_to 'Редактировать', edit_article_path(@article), :class => 'btn' %>
	  <% end %>  
	  <%= link_to 'На главную', articles_path, :class => 'btn' %>
	</div>
</div>
