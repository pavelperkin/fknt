<div class='row'>
  <div class="offset4 span4">
    <h2>Добро пожаловать</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
      	<%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %>
      </div>
      <div>
      	<%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>
      </div>
      <div>
      	<%= f.submit "Войти" %>
      </div>
    <% end %>
  </div>
</div>

