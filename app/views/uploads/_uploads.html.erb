<div class="row_fluid">
  <div class="span5">
    <table class='table'>
      <tr>
  	    <th>Имя файла</th>
  	    <th>Предмет</th>
        <th>Комментарий</th>
  	    <th>Добавлен</th>
  	    <th></th>
      </tr>
      <% uploads.each do |upload|%>
  	    <tr>
  	      <td><%= upload.filename %></td>	
  	      <td><%= upload.subject  %></td>	
          <td><%= upload.comment  %></td>
  	      <td><%=l upload.updated_at.to_date %></td>
          <% if !upload.file.to_s.empty? %>	
  	        <td><%= link_to 'Скачать', upload.file.to_s  %></td>
          <% else %>
            <td><%= link_to 'Скачать', upload.url  %></td>
          <% end %>  	
  	    </tr>	
      <% end %>
    </table>	
  </div>
</div>
